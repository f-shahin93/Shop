<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_products_list_home"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_home_page"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/color_dark_violet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">

            <RelativeLayout
                android:layoutDirection="rtl"
                android:id="@+id/relativeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_ic_nav_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_nav_menu"
                    android:gravity="center_vertical" />

            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layoutDirection="rtl"
                android:id="@+id/appCompatTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:ellipsize="end"
                android:fontFamily="@font/iran_sans_bold"
                android:gravity="center_horizontal"
                android:lines="1"
                android:paddingTop="4dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="فروشگاه آنلاین"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/relativeLayout"
                app:layout_constraintEnd_toStartOf="@+id/relativeLayout"
                app:layout_constraintTop_toTopOf="@+id/relativeLayout" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:layoutDirection="ltr"
                android:id="@+id/shopping_cart_item_toolbar_home"
                android:layout_width="48.0dip"
                android:layout_height="48.0dip"
                android:background="@drawable/hover_oval"
                android:contentDescription="@string/content_description"
                android:padding="12.0dip"
                android:src="@drawable/ic_main_shopping_cart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_cart_counter_home"
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/shopping_cart_item_toolbar_home"
                android:background="@drawable/background_cart_counter"
                android:fontFamily="@font/iran_sans_bold"
                android:gravity="center"
                android:layoutDirection="ltr"
                android:textColor="@color/digikala_red_dark"
                android:textSize="11.0sp"
                android:textStyle="bold"
                android:visibility="visible"
                app:layout_constraintEnd_toStartOf="@+id/search_item_toolbar_home"
                app:layout_constraintTop_toTopOf="@id/shopping_cart_item_toolbar_home" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:layoutDirection="ltr"
                android:id="@+id/search_item_toolbar_home"
                android:layout_width="48.0dip"
                android:layout_height="48.0dip"
                android:background="@drawable/hover_oval"
                android:contentDescription="@string/content_description"
                android:src="@drawable/ic_search"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/shopping_cart_item_toolbar_home"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/container_frag_home_p"/>

</androidx.appcompat.widget.LinearLayoutCompat>