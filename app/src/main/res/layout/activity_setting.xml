<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activities.SettingActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar_setting"
        android:background="@color/digikala_red_dark"
        app:titleTextColor="@android:color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/toolbarHomeActionbar_iv_tree_dots"
                android:background="@drawable/hover_oval"
                android:padding="12.0dip"
                android:layout_width="48.0dip"
                android:layout_height="48.0dip"
                android:layout_marginTop="4.0dip"
                android:layout_marginBottom="4.0dip"
                android:src="@drawable/ic_menu_circle"
                android:layout_alignParentLeft="true"
                android:contentDescription="@string/content_description"/>

            <ImageButton
                android:id="@+id/toolbarHomeActionbar_iv_searchIcButton"
                android:background="@drawable/hover_oval"
                android:layout_width="48.0dip"
                android:layout_height="48.0dip"
                android:layout_marginTop="4.0dip"
                android:layout_marginBottom="4.0dip"
                android:src="@drawable/ic_search"
                android:layout_toRightOf="@id/toolbarHomeActionbar_iv_tree_dots"
                android:contentDescription="@string/content_description" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="48.0dip"
                android:layout_marginTop="4.0dip"
                android:layout_marginBottom="4.0dip"
                android:layout_toStartOf="@+id/toolbarHomeActionbar_iv_backButton"
                android:layout_toLeftOf="@+id/toolbarHomeActionbar_iv_backButton"
                android:textColor="@android:color/white"
                android:id="@+id/tv_title_activity_setting"
                android:text="@string/title_setting"
                android:gravity="center"
                android:textSize="18sp"
                android:fontFamily="@font/iran_sans_bold"/>

            <ImageButton
                android:id="@+id/toolbarHomeActionbar_iv_backButton"
                android:background="@drawable/hover_oval"
                android:padding="12.0dip"
                android:layout_width="48.0dip"
                android:layout_height="48.0dip"
                android:layout_margin="4.0dip"
                android:src="@drawable/ic_arrow_back"
                android:layout_alignParentRight="true"
                style="@style/actions" />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container_setting_frag"/>

</androidx.appcompat.widget.LinearLayoutCompat>