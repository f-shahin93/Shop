<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layoutDirection="rtl"
            android:orientation="vertical"
            android:layout_weight="3">

            <TextView
                android:id="@+id/title_product_shopping_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="عنوان کالا"
                android:fontFamily="@font/iran_sans"/>

            <TextView
                android:fontFamily="@font/iran_sans"
                android:id="@+id/description_product_shopping_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/digikala_black_dark_54"
                android:text="توضیحات کالا" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="گارانتی:"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/iran_sans"/>

                <TextView
                    android:fontFamily="@font/iran_sans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18 ماهه شاهین کالا" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="@font/iran_sans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="فروشنده:"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:fontFamily="@font/iran_sans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="فروشگاه آنلاین" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:fontFamily="@font/iran_sans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="تعداد:"
                    android:layout_marginLeft="5dp"/>

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinner_shopping_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/Iv_product_shopping_cart"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <FrameLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:backgroundTint="@color/gray_100_transparent"
        android:background="@color/gray_100_transparent">

        <TextView
            android:fontFamily="@font/iran_sans"
            android:id="@+id/total_price_shopping_cart"
            android:text="122323"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:fontFamily="@font/iran_sans"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="قیمت کل"/>

    </FrameLayout>

    <FrameLayout
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:backgroundTint="@color/gray_100_transparent"
        android:background="@color/gray_100_transparent">

        <TextView
            android:fontFamily="@font/iran_sans"
            android:id="@+id/final_price_shopping_cart"
            android:textColor="@android:color/holo_green_dark"
            android:text="1236555"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:fontFamily="@font/iran_sans"
            android:textColor="@android:color/holo_green_dark"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="قیمت نهایی"/>

    </FrameLayout>

    <TextView
        android:fontFamily="@font/iran_sans"
        android:id="@+id/tv_delete_product_from_shopping_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="حذف"
        android:textColor="@android:color/holo_red_dark"
        android:padding="20dp"/>


</LinearLayout>
</com.google.android.material.card.MaterialCardView>
</layout>